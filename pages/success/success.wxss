/* pages/success/success.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.success-model{
  height : 380rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.success-model .icon{
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.success-model .icon image{
  width: 90rpx;
  height: 90rpx;
}
.success-model .icon text{
  margin-top: 10rpx;
}
.success-model .back{
  margin-top: 60rpx;
  padding : 15rpx 40rpx;
  color : #fff;
  background-color:  #FEBE1B;
  border-radius: 10rpx;
}
.like-model{
  flex : 1;
  background-color: #fff;
}
.like-model .title{
  padding : 20rpx 0;
  font-size: 42rpx;
  color : #333;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
}
.like-model .title text:nth-child(2){
  padding : 0 10rpx;
}
.like-model .title text:first-child, .like-model .title text:last-child{
  color : #f60;
}
.model{
  padding : 20rpx;
}
.model image{
  height : 402rpx;
}
.model .item-title{
  color : #bbb;
  font-size : 44rpx;
}
.model .item-price {
  font-size : 44rpx;
  color : #f60;
}
.model .item-sales{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  align-items: center;
}
.model .item-sales text{
  color : #bbb;
}
.model .item-sales view{
  color : #fff;
  background-color: #f60;
  padding :20rpx 30rpx;
  border-radius: 10rpx;
}